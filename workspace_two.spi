# Welcome to Sonic Pi

#Robot
#Coded by Davids Fiddle

# %$https://github.com/DavidsFiddle/Sonic-Pi-Code-Bits/blob/master/Beats/Robot

low = 60
high = 120
use_bpm 60

live_loop :beat do
  tick
  2.times do
    sample :bd_klub
    sleep 0.5
  end
  
  sample (knit :glitch_robot1,3,:glitch_robot2,1).look,
    cutoff: (line low,high,steps: 16).mirror.look, onset: (range 1, 3).pick
  sleep 0.5
end

in_thread do #control cutoff
  sleep 16
  low = 90
  high = 120
end