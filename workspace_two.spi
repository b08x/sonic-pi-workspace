# Welcome to Sonic Pi

#Robot
#Coded by Davids Fiddle

# %$https://github.com/DavidsFiddle/Sonic-Pi-Code-Bits/blob/master/Beats/Robot

low = 60
high = 120
use_bpm 60

live_loop :beat do
  tick
  sample :bd_klub
  sample (knit :glitch_robot3,3,:glitch_robot2,1).look,
    cutoff: (line low,high,steps: 16).mirror.look
  sleep 1
end

in_thread do #control cutoff
  sleep 16
  low = 90
  high = 120
end